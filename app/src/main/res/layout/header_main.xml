<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".activities.client.ClientDashBoard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blue_trans"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textview_loc"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="@drawable/trans_rect"
            android:fontFamily="@font/arima_regular"
            android:hint="@string/location"
            android:paddingLeft="15dp"
            android:textColorHint="@color/white"
            android:textSize="@dimen/small_font" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/trans_rect"
            android:drawableLeft="@drawable/filter"
            android:fontFamily="@font/arima_regular"
            android:gravity="center"
            android:text="@string/filter"
            android:textColor="@color/white"
            android:textSize="@dimen/small_font" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>



